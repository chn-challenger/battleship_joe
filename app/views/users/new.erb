<% if @username %>
<h1>Hi, <%= @username %>!</h1>
<p>You need to go to <a href="/my-account">your account</a>.</p>

<% else %>

<form action="/users/sign-up" method="post">
  <label for="username">Please enter your name
  <input type="text" name="username">
  </label>
  <input type="submit" value="Sign up">
</form>

<% end %>
